                  href="/products/<%=result.name%>/<%=result.id%>"
                >
                  <h6 class="mt-2 mb-2"><%= result.title %></h6></a
                >
                <div class="price">$<%= result.price %></div>
              </div>
              <% if(result.available) {%>
              <a
                href="/add-to-cart/<%=result.id%>"
                class="btn btn-block btn-secondary button-style mt-auto mb-2"
              >
                Add to Shopping Cart
              </a>
              <% } else { %>
              <a
                href="#"
                class="btn btn-block btn-danger button-style-danger mt-2 mb-2"
              >
                Sold out
              </a>
              <%} %>
            </div>
          </div>
          <%}%>
        </div>
      </div>
      <!--/.Second slide-->

      <!--Third slide-->
      <div class="carousel-item">
        <div class="row">
          <% for(let i=6; i<9; i++) { %>
          <div class="col-md-4 product-index-box">
            <div class="single-product d-flex flex-column h-100">
              <a
                class="title-link"
                href="/products/<%=result.name%>/<%=result.id%>"
              >
